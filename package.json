{
  "devDependencies": {
    "@commitlint/cli": "7.0.0",
    "babel-core": "6.26.3",
    "babel-jest": "22.4.4",
    "babel-loader": "8.0.2",
    "babel-preset-cozy-app": "1.1.1",
    "babel-preset-react": "6.24.1",
    "commitlint-config-cozy": "0.2.2",
    "enzyme": "3.4.4",
    "enzyme-adapter-react-16": "1.2.0",
    "eslint": "4.19.1",
    "eslint-config-cozy-app": "0.8.0",
    "eslint-loader": "2.1.1",
    "husky": "0.14.3",
    "jest": "23.5.0",
    "jest-fetch-mock": "1.6.6",
    "jsdoc-to-markdown": "4.0.1",
    "lerna": "2.11.0",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "redux-mock-store": "1.5.3",
    "webpack": "4.17.1",
    "webpack-cli": "2.1.5"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint 'packages/*/src/**/*.{js,jsx}'",
    "test": "jest",
    "watch": "lerna run watch --parallel",
    "build": "lerna run build",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "clean": "rm -rf packages/*/dist",
    "doc": "jsdoc2md packages/*/src/**.js > docs/api.md"
  },
  "jest": {
    "testURL": "http://localhost",
    "setupFiles": [
      "<rootDir>/packages/cozy-client/src/__tests__/setup.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/packages/cozy-stack-client/src/__tests__/setup.js",
    "testMatch": [
      "**/(*.)(spec|test).js?(x)"
    ]
  },
  "commitlint": {
    "extends": [
      "cozy"
    ]
  }
}
