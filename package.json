{
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.1.3",
    "babel-preset-cozy-app": "^1.1.0",
    "babel-preset-react": "^6.24.1",
    "commitlint-config-cozy": "0.2.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.16.0",
    "eslint-config-cozy-app": "^0.8.0",
    "eslint-loader": "^2.0.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "jest-fetch-mock": "^1.4.1",
    "jsdoc-to-markdown": "^4.0.1",
    "lerna": "^3.0.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "redux-mock-store": "^1.5.1",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.9"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint 'packages/*/src/**/*.js'",
    "test": "jest",
    "watch": "lerna run watch --parallel",
    "build": "lerna run build",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "clean": "rm -rf packages/*/dist",
    "doc": "jsdoc2md packages/*/src/**.js > docs/api.md"
  },
  "jest": {
    "testURL": "http://localhost",
    "setupFiles": [
      "<rootDir>/packages/cozy-client/src/__tests__/setup.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/packages/cozy-stack-client/src/__tests__/setup.js",
    "testMatch": [
      "**/(*.)(spec|test).js?(x)"
    ]
  },
  "commitlint": {
    "extends": [
      "cozy"
    ]
  }
}
