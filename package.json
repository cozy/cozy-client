{
  "devDependencies": {
    "@babel/core": "7.6.2",
    "babel-preset-cozy-app": "1.7.0",
    "babel-preset-react": "6.24.1",
    "commitlint-config-cozy": "0.4.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint": "5.16.0",
    "eslint-config-cozy-app": "1.3.2",
    "eslint-plugin-jsdoc": "^15.11.1",
    "eslint-plugin-react": "7.14.3",
    "husky": "0.14.3",
    "jest": "24.9.0",
    "jest-fetch-mock": "1.7.5",
    "jsdoc-to-markdown": "4.0.1",
    "lerna": "3.16.4",
    "react": "16.10.1",
    "react-dom": "16.10.1",
    "redux-mock-store": "1.5.3",
    "whatwg-fetch": "^3.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint 'packages/*/src/**/*.{js,jsx}' 'packages/*/examples/**/*.{js,jsx}'",
    "test": "jest --verbose",
    "watch": "lerna run watch --parallel",
    "build": "lerna run build",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "clean": "rm -rf packages/*/dist",
    "docs": "node scripts/docs.js"
  },
  "jest": {
    "testURL": "http://localhost",
    "setupFiles": [
      "./jest.setup.js",
      "jest-localstorage-mock"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/packages/cozy-stack-client/src/__tests__/setup.js"
    ],
    "testMatch": [
      "**/(*.)(spec|test).js?(x)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/.*/dist/"
    ]
  },
  "commitlint": {
    "extends": [
      "cozy"
    ]
  }
}
